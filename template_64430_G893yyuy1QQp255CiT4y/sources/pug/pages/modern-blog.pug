extends  ../_skeleton

//- Includes

block variables
  - var activeIndex = 4
  - var pageName = 'Blog Modern'

block page
  // Page Header
  +breadcrumbs-header({ headerClass: 'breadcrumbs-background-03',
    text: "Our News",
    path: [[menu[activeIndex].title, menu[activeIndex].link], ['Modern blog']]
  })

  // Blog
  section.section.section-xl.bg-gray-lighter
    
    .shell.shell-bigger
      .range.range-ten.range-50.range-sm-90.range-sm-center.range-lg-justify
        .cell-sm-9.cell-md-6.blog-modern-main.text-center
          // Post modern
          article.post-modern
            .post-modern-aside
              time(datetime='2017') Feb 27, 2017 at 5:47 pm 
              figure.post-modern-avatar-wrap: +jpg('post-author-1-108x108', 'post-modern-avatar')
              p.post-modern-author: a(href='single-post.html') Ronald Chen 
              
            .post-modern-main
              a.post-modern-image(href=postLink): +jpg('blog-post-1-870x580')
