extends  ../_skeleton

//- Includes
include ../elements/_ui-style-switcher
include ../elements/_ui-team-classic
include ../elements/_ui-gallery-item-title-inside

block variables
  - var activeIndex = 3
  - var pageName = 'Gallery Fullwidth Outside Title'

block page
  // Page Header
  +breadcrumbs-header({ headerClass: 'breadcrumbs-background-02',
    text: "Outside Title",
    title: 'Fullwidth Gallery',
    path: [[menu[activeIndex].title, menu[activeIndex].link], ['Fullwidth Gallery Outside Title']]
  })

  // titled Grid gallery
  section.section.section-lg-top.text-center.bg-white
    
    h3 full-width gallery Outside title
    .isotope-wrap.range.range-50
      // Isotope Filters
      .cell-lg-12
        ul.isotope-filters.isotope-filters-horizontal
          li.block-top-level
            p.big Choose your category:
            // Isotope Filters
            button.isotope-filters-toggle.button.button-xs.button-primary(data-custom-toggle='.isotope-filters-list', data-custom-toggle-hide-on-blur='true')
              | Filter
              span.caret

            ul.isotope-filters-list
              li
                a.active(data-isotope-filter='*', data-isotope-group='gallery-01', href='#') All Categories
              li
                a(data-isotope-filter='type 1', data-isotope-group='gallery-01', href='#') Type 1
              li
                a(data-isotope-filter='type 2', data-isotope-group='gallery-01', href='#') Type 2
      // Isotope Content
      .cell-lg-12
        .isotope(data-isotope-layout='fitRows', data-isotope-group='gallery-01', data-lightgallery='group')
          .row.row-condensed.row-no-gutter
            .col-xs-12.col-sm-6.col-md-4.isotope-item(data-filter='type 1')
              +gallery-item-title-inside({
                classMod: 'title-inside-gallery-item gallery-item-fullwidth',
                img: 'gallery-grid-01-570x380',
                title_inside: 'Corporate taxi',
                text: 'Our regular taxi services make us the most popular among other taxi providers.'
              })

            .col-xs-12.col-sm-6.col-md-4.isotope-item(data-filter='type 1')
              +gallery-item-title-inside({
                classMod: 'title-inside-gallery-item gallery-item-fullwidth',
                img: 'gallery-grid-02-570x380',
                title_inside: 'Fast & safe driving',
                text: 'Our regular taxi services make us the most popular among other taxi providers.'
              })

            .col-xs-12.col-sm-6.col-md-4.isotope-item(data-filter='type 1')
              +gallery-item-title-inside({
                classMod: 'title-inside-gallery-item gallery-item-fullwidth',
                img: 'gallery-grid-03-570x380',
                title_inside: 'Timely airport transfer',
                text: 'Our regular taxi services make us the most popular among other taxi providers.'
              })

            .col-xs-12.col-sm-6.col-md-4.isotope-item(data-filter='type 2')
              +gallery-item-title-inside({
                classMod: 'title-inside-gallery-item gallery-item-fullwidth',
                img: 'gallery-grid-04-570x380',
                title_inside: 'Worldwide service availability',
                text: 'Our regular taxi services make us the most popular among other taxi providers.'
              })

            .col-xs-12.col-sm-6.col-md-4.isotope-item(data-filter='type 2')
              +gallery-item-title-inside({
                classMod: 'title-inside-gallery-item gallery-item-fullwidth',
                img: 'gallery-grid-05-570x380',
                title_inside: 'Modern and extensive fleet',
                text: 'Our regular taxi services make us the most popular among other taxi providers.'
              })

            .col-xs-12.col-sm-6.col-md-4.isotope-item(data-filter='type 2')
              +gallery-item-title-inside({
                classMod: 'title-inside-gallery-item gallery-item-fullwidth',
                img: 'gallery-grid-06-570x380',
                title_inside: 'Qualified drivers',
                text: 'Our regular taxi services make us the most popular among other taxi providers.'
              })
  ="\n"

  // Page Footer
  +footer-extended({     className: 'bg-gray-darker',     instaType : 'tagged',     tagName : 'bTaxiTM'   })