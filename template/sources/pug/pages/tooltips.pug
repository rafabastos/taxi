extends  ../_skeleton

block variables
  - var activeIndex = 5
  - var pageName = 'Tooltips'

block page
  // Page Header
  +breadcrumbs-header({ headerClass: 'breadcrumbs-background-01',
    text: "Interface Elements",
    path: [[menu[activeIndex].title, menu[activeIndex].link], [pageName]]
  })

  // Tooltip design
  section.section.section-lg.bg-white.text-center
    
    .shell
      h3 Tooltip design
      // Box element
      .box-element
        .tooltip-custom(data-toggle='tooltip' data-placement='top' title='Tooltip text')
          span.icon.icon-lg-smaller.icon-primary.fl-bigmug-line-megaphone11

      // Box element
      .box-element
        .tooltip-custom(data-toggle='tooltip' data-placement='right' title='Tooltip text')
          span.text-gray-1 Tooltip

      // Box element
      .box-element
        .tooltip-custom(data-toggle='tooltip' data-placement='left' title='Tooltip text')
          button.button.button-secondary.button-nina Tooltip button
  ="\n"

  // Page Footer
  +footer-extended({     className: 'bg-gray-darker',     instaType : 'tagged',     tagName : 'bTaxiTM'   })