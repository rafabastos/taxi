      h3 testimonials
      .divider.divider-default

      // Owl Carousel
      .owl-carousel.owl-layout-2(data-items='1', data-dots='true' data-nav='false' data-stage-padding='0', data-loop='true', data-margin='30', data-mouse-drag="false")
